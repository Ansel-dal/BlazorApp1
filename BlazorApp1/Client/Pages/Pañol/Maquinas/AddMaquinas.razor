<div class="card">
    <div class="card-body">
        <EditForm Model="oMaquinasHerramienta" OnValidSubmit="Guardar">
            <DataAnnotationsValidator />

            <div class="form-group row mb-1">
                <label class="col-sm-3">Ingrese el nombre</label>
                <InputText @bind-Value="@oMaquinasHerramienta.Nombre" placeholder="Nombre"></InputText>
                <ValidationMessage For="(()=> oMaquinasHerramienta.Nombre)" />
            </div>

            <div class="form-group row mb-1">
                <label class="col-sm-3">Marca</label>
                <InputText @bind-Value="@oMaquinasHerramienta.Marca" placeholder="Marca"></InputText>
                <ValidationMessage For="(()=> oMaquinasHerramienta.Marca)" />
            </div>

            <div class="form-group row mb-1">
                <label class="col-sm-3">Fecha de ingreso</label>
                <InputDate @bind-Value="@oMaquinasHerramienta.FechaIngreso" placeholder="FechaIngreso"></InputDate>
                <ValidationMessage For="(()=> oMaquinasHerramienta.FechaIngreso)" />
            </div>

            <button class="btn btn-outline-success" type="submit">Aceptar</button>
        </EditForm>
    </div>
</div>


@code {
    MaquinasHerramienta oMaquinasHerramienta = new();
    Respuesta<MaquinasHerramienta> oRta = new();
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }
    [Parameter] public int id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (id != 0)
        {
            oRta = await http.GetFromJsonAsync<Respuesta<MaquinasHerramienta>>($"/api/maquinas/{id}");
            oMaquinasHerramienta = oRta.List;
        }
    }

    async Task Guardar()
    {
        if (id == 0)
        {
            await http.PostAsJsonAsync<MaquinasHerramienta>("/api/maquinas", oMaquinasHerramienta);
            await ModalInstance.CloseAsync(ModalResult.Ok($"Form was submitted successfully."));
        }
        else
        {
            await http.PutAsJsonAsync<MaquinasHerramienta>("/api/maquinas", oMaquinasHerramienta);
            await ModalInstance.CloseAsync(ModalResult.Ok($"Form was submitted successfully."));
        }
    }
}
