<div class="card">
    <div class="card-body">
        <EditForm Model="oActivo" OnValidSubmit="Guardar">
            <DataAnnotationsValidator />

            <div class="form-group row mb-1">
                <label class="col-sm-3">Ingrese el nombre</label>
                <InputText @bind-Value="@oActivo.Nombre" placeholder="Nombre"></InputText>
                <ValidationMessage For="(()=> oActivo.Nombre)" />
            </div>

            <div class="form-group row mb-1">
                <label class="col-sm-3">Marca</label>
                <InputText @bind-Value="@oActivo.Marca" placeholder="Marca"></InputText>
                <ValidationMessage For="(()=> oActivo.Marca)" />
            </div>

            <div class="form-group row mb-1">
                <label class="col-sm-3">Cantidad</label>
                <InputNumber @bind-Value="@oActivo.Cantidad" placeholder="Cantidad"></InputNumber>
                <ValidationMessage For="(()=> oActivo.Cantidad)" />
            </div>

            <div class="form-group row mb-1">
                <label class="col-sm-3">Fecha de ingreso</label>
                <InputDate @bind-Value="@oActivo.FechaIngreso" placeholder="FechaIngreso"></InputDate>
                <ValidationMessage For="(()=> oActivo.FechaIngreso)" />
            </div>

            <button class="btn btn-outline-success" type="submit">Aceptar</button>
        </EditForm>
    </div>
</div>


@code {
    Activo oActivo = new();
    Respuesta<Activo> oRta = new();
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }
    [Parameter] public int id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (id != 0)
        {
            oRta = await http.GetFromJsonAsync<Respuesta<Activo>>($"/api/Activo/{id}");
            oActivo = oRta.List;
        }
    }

    async Task Guardar()
    {
        if (id == 0)
        {
            await http.PostAsJsonAsync<Activo>("/api/Activo", oActivo);
            await ModalInstance.CloseAsync(ModalResult.Ok($"Form was submitted successfully."));
        }
        else
        {
            await http.PutAsJsonAsync<Activo>("/api/Activo", oActivo);
            await ModalInstance.CloseAsync(ModalResult.Ok($"Form was submitted successfully."));
        }
    }
}
